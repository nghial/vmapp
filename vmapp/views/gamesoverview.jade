extends layout

block content
    h1.
        Games
    h5.
        Follow the coming games in the World Cup, and find out which TV channel sends you favourite games!
    br
    table#gamesoverview(class="group")
        thead
            h1.
                Group Stage
        tbody
            tr
            each game, i in games
                tr#games
                    td
                        img(src="images/" + game.team1_code + ".svg.png" height="50" width="50")
                    td#teamintable
                        p=game.team1_title
                    td#scoreintable                            
                        a(href=game.url target="_blank")
                            if game.score1 != null
                                p(style="font-size:20px; text-align: center")=game.score1 + " - " + game.score2
                            else
                                p(style="font-size:20px; text-align: center")=game.channel
                                p(style="font-size:20px; text-align: center")=game.play_at + " " + game.time
                    td#teamintable
                        p(style="text-align: right")=game.team2_title
                    td
                        img(src="images/" + game.team2_code + ".svg.png" height="50" width="50" align="right")
                tr
                    td(colspan="5" style="text-align:center")
                        if game.score1 == null
                            p=game.channel
                            p=game.play_at + " " + game.time
                tr
                    td
                        &nbsp;
                        &nbsp;