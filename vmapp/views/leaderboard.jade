extends layout

block content
    div
        h1. Altinn World Cup LEADERBOARD after the 13th match
    br
    div
        table#leaderboard(class="bordered")
            thead
                tr
                    th #
                    th Username
                    th Points
            each entry, i in leaderboard
                tr
                    td
                        if entry.points != _oldpoints
                            - _oldpoints = entry.points
                            - _place = i +1
                            p=_place
                        else
                            p=_place
                        //p='(' + (i+1) + ')'
                    td
                        a(href="/gamesresult?id=" + entry.uuid, id="linkToUser")
                            p=entry.name
                    td 
                        p=entry.points
